{
  "extends": "./support/tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "node",
      "jest",
      "jest-extended",
      "jest-axe",
      "@testing-library/jest-dom",
      "@types/requestidlecallback",
      "snapshot-diff"
    ],
    "noEmit": true,
    "importsNotUsedAsValues": "remove",
    "plugins": [
      { "name": "typescript-snapshots-plugin" },
      { "name": "typescript-plugin-css-modules" }
    ]
  },
  "include": ["packages/*/src", "packages/@remirror/*/src", "global.d.ts"],
  "exclude": ["packages/@remirror/svelte", "**/node_modules/**"]
}
